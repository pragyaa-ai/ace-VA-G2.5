generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum VoiceAgentEngine {
  PRIMARY
  SECONDARY
}

enum Accent {
  INDIAN
  AMERICAN
  BRITISH
}

enum Language {
  ENGLISH
  HINDI
}

// Voice names mapped to Indian names (internal Gemini mapping hidden)
// Ananya=Aoede, Priya=Puck, Chitra=Charon, Kavya=Kore, Farhan=Fenrir
enum VoiceName {
  ANANYA
  PRIYA
  CHITRA
  KAVYA
  FARHAN
}

enum CalloutJobStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  ESCALATED
}

enum CalloutAttemptStatus {
  QUEUED
  TRIGGERED
  DIALING
  RINGING
  ANSWERED
  COMPLETED
  FAILED
  NO_ANSWER
  BUSY
  VOICEMAIL
}

model VoiceAgent {
  id            String            @id @default(cuid())
  name          String
  phoneNumber   String?
  engine        VoiceAgentEngine  @default(PRIMARY)
  isActive      Boolean           @default(true)

  // Key configurable parameters
  greeting      String            @default("Hello! Welcome to Kia. How can I help you today?")
  accent        Accent            @default(INDIAN)
  language      Language          @default(ENGLISH)
  voiceName     VoiceName         @default(ANANYA)

  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  callFlow      CallFlow?
  guardrails    Guardrail[]
  voiceProfile  VoiceProfile?
  sessions      CallSession[]
  feedback      Feedback[]
  calloutSchedule CalloutSchedule?
  calloutJobs     CalloutJob[]

  @@index([isActive])
  @@index([phoneNumber])
}

model CalloutSchedule {
  id                String    @id @default(cuid())
  voiceAgentId      String    @unique
  isActive          Boolean   @default(true)
  runAtLocalTime    String    @default("11:00")
  timezone          String    @default("Asia/Kolkata")
  attemptsPerDay    Int       @default(3)
  maxDays           Int       @default(2)
  escalationEnabled Boolean   @default(true)
  configJson        Json?
  lastRunAt         DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  voiceAgent        VoiceAgent @relation(fields: [voiceAgentId], references: [id], onDelete: Cascade)

  @@index([isActive])
}

model CalloutJob {
  id                 String           @id @default(cuid())
  voiceAgentId       String
  employeeExternalId String?
  employeeName       String?
  employeePhone      String?
  employeeCompany    String?
  employeeJson       Json
  status             CalloutJobStatus @default(PENDING)
  totalAttempts      Int              @default(0)
  lastAttemptAt      DateTime?
  nextAttemptAt      DateTime?
  pulledAt           DateTime         @default(now())
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt

  voiceAgent        VoiceAgent @relation(fields: [voiceAgentId], references: [id], onDelete: Cascade)
  attempts          CalloutAttempt[]
  outcome           CalloutOutcome?

  @@index([voiceAgentId])
  @@index([status])
  @@index([employeeExternalId])
  @@index([pulledAt])
}

model CalloutAttempt {
  id               String               @id @default(cuid())
  calloutJobId     String
  attemptNumber    Int
  localDate        String
  status           CalloutAttemptStatus @default(QUEUED)
  requestedAt      DateTime?
  dialedAt         DateTime?
  answeredAt       DateTime?
  completedAt      DateTime?
  callDurationSec  Int?
  callSid          String?
  callTranscriptId String?
  responseJson     Json?
  errorMessage     String?
  createdAt        DateTime             @default(now())
  updatedAt        DateTime             @updatedAt

  calloutJob      CalloutJob @relation(fields: [calloutJobId], references: [id], onDelete: Cascade)

  @@index([calloutJobId])
  @@index([callSid])
  @@unique([calloutJobId, attemptNumber])
}

model CalloutOutcome {
  id                           String   @id @default(cuid())
  calloutJobId                 String   @unique
  callbackDate                 String?
  callbackTime                 String?
  nonContactableStatusNodeId   Int?
  notes                        String?
  postedAt                     DateTime?
  
  // Call outcome classification
  outcome                      String?   // scheduled, not_interested, callback_requested, no_response, disconnected, busy, wrong_number, language_barrier, voicemail, incomplete
  
  // Extended analysis from VoiceAgent AI
  candidateConcerns            String[]  @default([])
  candidateQueries             String[]  @default([])
  sentiment                    String?   // positive, neutral, negative, hesitant
  cooperationLevel             String?   // cooperative, hesitant, reluctant, uncooperative
  languagePreference           String?   // English, Hindi
  languageIssues               String?
  rescheduleRequested          Boolean   @default(false)
  specialNotes                 String?
  analysisJson                 Json?     // Full raw analysis from VoiceAgent AI
  
  createdAt                    DateTime @default(now())
  updatedAt                    DateTime @updatedAt

  calloutJob                   CalloutJob @relation(fields: [calloutJobId], references: [id], onDelete: Cascade)
}

model CallFlow {
  id            String    @id @default(cuid())
  voiceAgentId  String    @unique
  greeting      String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  voiceAgent    VoiceAgent  @relation(fields: [voiceAgentId], references: [id], onDelete: Cascade)
  steps         CallFlowStep[]
}

model CallFlowStep {
  id          String   @id @default(cuid())
  callFlowId  String
  order       Int
  title       String
  content     String
  enabled     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  callFlow    CallFlow @relation(fields: [callFlowId], references: [id], onDelete: Cascade)

  @@unique([callFlowId, order])
  @@index([callFlowId])
}

model Guardrail {
  id            String      @id @default(cuid())
  voiceAgentId  String
  name          String
  description   String?
  ruleText      String
  enabled       Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  voiceAgent    VoiceAgent  @relation(fields: [voiceAgentId], references: [id], onDelete: Cascade)

  @@index([voiceAgentId])
  @@index([enabled])
}

model VoiceProfile {
  id            String      @id @default(cuid())
  voiceAgentId  String      @unique
  voiceName     String
  accentNotes   String?
  settingsJson  Json?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  voiceAgent    VoiceAgent  @relation(fields: [voiceAgentId], references: [id], onDelete: Cascade)
}

model Feedback {
  id            String      @id @default(cuid())
  voiceAgentId  String?
  source        String      @default("testing")
  message       String
  createdAt     DateTime    @default(now())

  voiceAgent    VoiceAgent? @relation(fields: [voiceAgentId], references: [id], onDelete: SetNull)

  @@index([voiceAgentId])
  @@index([createdAt])
}

model CallSession {
  id            String            @id @default(cuid())
  voiceAgentId  String?
  engine        VoiceAgentEngine  @default(PRIMARY)
  direction     String            @default("inbound")
  fromNumber    String?
  toNumber      String?
  startedAt     DateTime          @default(now())
  endedAt       DateTime?
  durationSec   Int?
  minutesBilled Decimal?          @db.Decimal(10, 2)
  metaJson      Json?

  voiceAgent    VoiceAgent?       @relation(fields: [voiceAgentId], references: [id], onDelete: SetNull)

  @@index([voiceAgentId])
  @@index([startedAt])
  @@index([engine])
}

// ---- NextAuth (Prisma Adapter compatible shape) ----
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
